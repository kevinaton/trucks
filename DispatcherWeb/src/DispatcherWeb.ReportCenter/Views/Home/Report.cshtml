@using Newtonsoft.Json
@model ReportViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel='shortcut icon' type='image/x-icon' href='~/favicon.ico' />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#000000">
    <title>Report Viewer</title>

    <link href="~/lib/grapecity/jsViewer.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/gritter/css/jquery.gritter.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet">

</head>

<body>
    <div style="width: 100%; overflow-x: hidden">
        <div style="float:right;width:100%" id="viewerContainer">
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/gritter/js/jquery.gritter.min.js" type="text/javascript"></script>
    <script src="~/lib/grapecity/jsViewer.min.js" type="text/javascript"></script>
    <script src="~/js/report.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {

            var _settings = {
                reportName: '@(Model.ReportPath)',
                reportPathSanitized: '@($"{Model.ReportPathSanitized}.rdlx")',
                tenantId: @(Model.TenantId)
                            };

            // initialize the report viewer module.
            window.reportViewerModule.init(_settings || {});
        });
    </script>
</body>
</html>