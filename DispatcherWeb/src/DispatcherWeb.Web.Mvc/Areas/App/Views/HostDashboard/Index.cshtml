@using Abp.Configuration.Startup
@using DispatcherWeb.Web.Areas.App.Startup
@using DispatcherWeb.Web.Areas.App.Models.HostDashboard
@model HostDashboardViewModel
@inject IMultiTenancyConfig MultiTenancyConfig
@{
    ViewBag.CurrentPageName = AppPageNames.Host.Dashboard;
}
@section Styles
    {
    <link rel="stylesheet" abp-href="/view-resources/Areas/App/Views/HostDashboard/Index.css" asp-append-version="true" />
}
@section Scripts
    {
    <script src="/view-resources/Areas/App/Views/_Bundles/host-dashboard-libs.min.js" asp-append-version="true"></script>
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/HostDashboard/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/HostDashboard/Index.js" asp-append-version="true"></script>
    </environment>
}
<div id="HostDashboard">
    <div class="m-subheader">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">
                    <span>@L("Dashboard")</span>
                </h3>
                <span class="m-section__sub">
                    @L("HostDashboardHeaderInfo")
                </span>
            </div>
            <div>
                <button name="RefreshButton" class="btn btn-primary"><i class="la la-refresh"></i> @L("Refresh")</button>
                <span class="m-subheader__daterange dashboard-report-range">
                    <span class="m-subheader__daterange-label">
                        <span class="m-subheader__daterange-title"></span>
                        <span class="m-subheader__daterange-date m--font-brand"></span>
                    </span>
                    <a href="#" class="btn btn-sm btn-primary m-btn m-btn--icon m-btn--icon-only m-btn--custom m-btn--pill">
                        <i class="la la-angle-down" aria-label="@L("Expand")"></i>
                    </a>
                </span>
            </div>
        </div>
    </div>

    @{
        (string name, string title)[] kpis = new[]
        {
            ("activeTenants", "Active Tenants"),
            ("activeTrucks", "Active Trucks"),
            ("activeUsers", "Active Users"),
            ("usersWithActivity", "Users with Activity"),
            ("orderLinesCreated", "Order lines"),
            ("internalTrucksScheduled", "Internal Trucks<br/> Scheduled"),
            ("internalScheduledDeliveries", "Internal Scheduled<br/> Deliveries"),
            ("leaseHaulerScheduledDeliveries", "Lease Hauler Scheduled<br/> Deliveries"),
            ("ticketsCreated", "Tickets"),
            ("smsSent", "SMS Messages")
        };
        int currentKpiNumber = 0;
        const int kpiPerRow = 4;

        bool NewRow(int kpiNumber) => kpiNumber % kpiPerRow == 0 || kpiNumber >= kpis.Length;
    }
    <div class="m-content">

        @foreach (var kpi in kpis)
        {
            if (NewRow(currentKpiNumber++))
            {
                @Html.Raw("<div class=\"m-portlet__body m-portlet__body--no-padding\">");
                @Html.Raw("<div class=\"m-portlet\">");
                @Html.Raw("<div class=\"row m-row--no-padding m-row--col-separator-xl\">");
            }
            <div class="col-md-12 col-lg-6 col-xl-3">
                <div class="m-widget24 kpi-statistics">
                    <div class="m-widget24__item">
                        <h4 class="m-widget24__title">
                            @Html.Raw(kpi.title)
                        </h4>
                        <br>
                        <span class="m-widget24__stats m--font-brand">
                            <span class="kpi kpi-@kpi.name">...</span>
                        </span>
                        <span class="m-widget24__number">
                        </span>
                    </div>
                </div>
            </div>
            if (NewRow(currentKpiNumber))
            {
                @Html.Raw("</div>");
                @Html.Raw("</div>");
                @Html.Raw("</div>");
            }
        }

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="m-portlet m-portlet--full-height recent-tenants">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <i class="icon-user-follow font-purple-soft"></i>
                                    <span class="caption-subject font-purple-soft">Tenant Statistics</span><br />
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="m-form m-form--label-align-right">
                            <form>
                                <div class="row mb-4">
                                    <div class="form-group col-xl-3 col-lg-4 col-md-6">
                                        <label class="control-label" for="EditionIdFilter">@L("Edition")</label>
                                        <select class="form-control filter" name="EditionId" id="EditionIdFilter" multiple="multiple">
                                            <option value="">@L("All")</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-xl-3 col-lg-4 col-md-6">
                                        <label for="StatusFilter">@L("Status")</label>
                                        <select class="dropdown form-control filter" name="Status" id="StatusFilter" asp-items="Html.GetEnumSelectList<FilterActiveStatus>(FilterActiveStatus.Active)"></select>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="scroller m-scrollable" data-always-visible="1" data-rail-visible="0" data-scrollable="false">
                            <table id="TenantStatisticsTable" class="tenant-statistics-table display table table-striped table-bordered table-hover dt-responsive nowrap"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-portlet" style="@(MultiTenancyConfig.IsEnabled ? null : "display: none")">
            <div class="m-portlet__body  m-portlet__body--no-padding">
                <div class="row m-row--no-padding m-row--col-separator-xl">
                    <div class="col-md-12 col-lg-6 col-xl-3">
                        <div class="m-widget24 new-subscription-statistics">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    @L("NewSubscriptionAmount")
                                </h4>
                                <br>
                                <span class="m-widget24__desc">
                                    @L("Subscriptions")
                                </span>
                                <span class="m-widget24__stats m--font-brand">
                                    $<span class="new-subscription-amount">...</span>
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-brand" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change">
                                    <div class="status-title"></div>
                                </span>
                                <span class="m-widget24__number">
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-3">
                        <div class="m-widget24 new-tenants-statistics">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    @L("NewTenants")
                                </h4>
                                <br>
                                <span class="m-widget24__desc">
                                    @L("Tenants")
                                </span>
                                <span class="m-widget24__stats m--font-info new-tenants-count">
                                    ...
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-info" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change">
                                    <div class="status-title"></div>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-3">
                        <div class="m-widget24 dashboard-statistics1">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    @L("DashboardSampleStatistics") 1
                                </h4>
                                <br>
                                <span class="m-widget24__desc">
                                    @L("DashboardSampleStatistics")
                                </span>
                                <span class="m-widget24__stats m--font-danger dashboard-placeholder1">
                                    ...
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-danger" role="progressbar" style="width: 45%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change">
                                    @L("DashboardSampleStatisticsHelpText")
                                </span>
                                <span class="m-widget24__number">
                                    45%
                                </>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6 col-xl-3">
                        <div class="m-widget24 dashboard-statistics2">
                            <div class="m-widget24__item">
                                <h4 class="m-widget24__title">
                                    @L("DashboardSampleStatistics") 2
                                </h4>
                                <br>
                                <span class="m-widget24__desc">
                                    @L("DashboardSampleStatistics")
                                </span>
                                <span class="m-widget24__stats m--font-success dashboard-placeholder2">
                                    ...
                                </span>
                                <div class="m--space-10"></div>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar m--bg-success" role="progressbar" style="width: 65%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="m-widget24__change">
                                    @L("DashboardSampleStatisticsHelpText")
                                </span>
                                <span class="m-widget24__number">
                                    65%
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="m-portlet m-portlet--full-height recent-requests">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <i class="icon-user-follow font-purple-soft"></i>
                                    <span class="caption-subject font-purple-soft">Requests</span><br />
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="scroller m-scrollable" data-always-visible="1" data-rail-visible="0" data-scrollable="false">
                            <table id="RequestsTable" class="requests-table display table table-striped table-bordered table-hover dt-responsive nowrap"></table>
                        </div>
                        <div class="scroller-footer">
                            <div class="btn-arrow-link pull-right">
                                <a href="javascript:;" id="ExportRequestsToCsvButton" class="export-all-requests">Export all records</a>
                                <i class="icon-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-xs-12 col-sm-12">
                <div class="m-portlet m-portlet--full-height recently-active-users">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <i class="icon-user-follow font-purple-soft"></i>
                                    <span class="caption-subject font-purple-soft">Recently Active Users</span><br />
                                    <small>
                                        <span class="caption-helper"></span>
                                    </small>
                                </h3>
                            </div>
                        </div>
                        <div class="m-portlet__head-tools">
                            <button type="button" class="btn btn-secondary" id="ShowRecentlyActiveUsersButton">@L("Show")</button>
                        </div>
                    </div>
                    <div class="m-portlet__body" style="display: none">
                        <div class="scroller m-scrollable" data-always-visible="1" data-rail-visible="0" data-scrollable="false">
                            <table id="RecentlyActiveUsersTable" class="recently-active-users-table display table table-striped table-bordered table-hover dt-responsive nowrap"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" style="@(MultiTenancyConfig.IsEnabled ? null : "display: none")">
            <div class="col-lg-6 col-xs-12 col-sm-12">
                <div class="m-portlet m-portlet--full-height expiring-tenants">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <i class="icon-graduation font-red-pink"></i>
                                    <span class="caption-subject font-red-pink bold uppercase">@L("SubscriptionExpiringTenants")</span><br />
                                    <small>
                                        <span class="caption-helper"></span>
                                    </small>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="scroller chart m-scrollable" data-always-visible="1" data-rail-visible="0" data-scrollable="true">
                            <table class="expiring-tenants-table display table table-striped table-bordered table-hover dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>@L("TenantName")</th>
                                        <th>@L("RemainingDay")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="scroller-footer">
                            <div class="btn-arrow-link pull-right">
                                <a href="javascript:;" class="see-all-expiring-tenants">@L("SeeAllRecords")</a>
                                <i class="icon-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-xs-12 col-sm-12">
                <div class="m-portlet m-portlet--full-height recent-tenants">
                    <div class="m-portlet__head">
                        <div class="m-portlet__head-caption">
                            <div class="m-portlet__head-title">
                                <h3 class="m-portlet__head-text">
                                    <i class="icon-user-follow font-purple-soft"></i>
                                    <span class="caption-subject font-purple-soft">@L("RecentTenants")</span><br />
                                    <small>
                                        <span class="caption-helper"></span>
                                    </small>
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="scroller chart m-scrollable" data-always-visible="1" data-rail-visible="0" data-scrollable="true">
                            <table class="recent-tenants-table display table table-striped table-bordered table-hover dt-responsive nowrap">
                                <thead>
                                    <tr>
                                        <th>@L("TenantName")</th>
                                        <th>@L("CreationTime")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="scroller-footer">
                            <div class="btn-arrow-link pull-right">
                                <a href="javascript:;" class="see-all-recent-tenants">@L("SeeAllRecords")</a>
                                <i class="icon-arrow-right"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>