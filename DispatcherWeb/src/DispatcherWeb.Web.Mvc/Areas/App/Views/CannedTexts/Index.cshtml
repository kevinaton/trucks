@using System.Threading.Tasks
@using Abp.Extensions
@using DispatcherWeb.Features
@using DispatcherWeb.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.CannedTexts;
}

@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/CannedTexts/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/CannedTexts/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/CannedTexts/_CreateOrEditModal.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/CannedTexts/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("CannedTextsHeader")</span>
            </h3>
            <span class="m-section__sub">
                @L("CannedTextsHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            <button id="CreateNewCannedTextButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L("AddNew")</button>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            @if ((await FeatureChecker.GetValueAsync(AppFeatures.AllowMultiOfficeFeature)).To<bool>())
            {
                <form>
                    <div class="row row m--margin-bottom-10">
                        <div class="form-group col-lg-6 col-md-4 col-sm-6">
                            <label class="control-label" for="OfficeIdFilter">@L("Office")</label>
                            <select class="form-control filter" name="OfficeId" id="OfficeIdFilter">
                                <option value="">Select an office</option>
                            </select>
                        </div>
                        <div class="col-lg-6 text-right margin-top-20">
                            <button type="submit" id="SearchButton" class="btn btn-primary btn-brand m-btn m-btn--icon">
                                <span><i class="fa fa-search"></i> <span>@L("Search")</span></span>
                            </button>
                            <button type="button" id="ClearSearchButton" class="btn btn-secondary m-btn m-btn--icon">
                                <span><i class="fa fa-times"></i> <span>@L("Clear")</span></span>
                            </button>

                        </div>
                    </div>
                </form>
                <div class="m-separator m-separator--md m-separator--dashed"></div>
            }
            <div class="row align-items-center">
                <table class="display table table-striped table-bordered table-hover dt-responsive nowrap" id="CannedTextsTable"></table>
            </div>
        </div>
    </div>
</div>
