@using System.Threading.Tasks
@using DispatcherWeb.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.Projects;
}

@section Scripts {
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/Projects/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/Projects/Index.min.js" asp-append-version="true"></script>
    </environment>
    }


<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-6 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("ProjectsHeader")</span>
            </h3>
            <span class="m-section__sub">
                @L("ProjectsHeaderInfo")
            </span>
        </div>
        <div class="col-6 col-md-6 text-right">
            <button id="CreateNewProjectButton" class="btn btn-primary" asp-action="Details"><i class="fa fa-plus"></i> @L("AddNew")</button>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
                <form class="m-form m-form--fit m--margin-bottom-20">
                    <div>
                        <div class="row m--margin-bottom-20">
                            <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
                                <label class="control-label" for="NameFilter">@L("Name")</label>
                                <input class="form-control m-input filter" id="NameFilter" name="Name" placeholder="Search..." type="text">
                            </div>

                            <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile AdvacedAuditFiltersArea" style="display: none">
                                <label class="control-label" for="StatusFilter">@L("Status")</label>
                                <select class="form-control m-input filter" name="Status" id="StatusFilter" asp-items="Html.GetEnumSelectList<ProjectStatus>()">
                                    <option value="">All</option>
                                </select>
                            </div>
                            <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile AdvacedAuditFiltersArea" style="display: none">
                                <label class="control-label" for="StartDateFilter">@L("StartDate")</label>
                                <input class="form-control m-input" id="StartDateFilter" type="text" autocomplete="off">
                                <input type="hidden" class="filter" name="StartDateStart" id="StartDateStartFilter" />
                                <input type="hidden" class="filter" name="StartDateEnd" id="StartDateEndFilter" />
                            </div>
                            <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile AdvacedAuditFiltersArea" style="display: none">
                                <label class="control-label" for="EndDateFilter">@L("EndDate")</label>
                                <input class="form-control m-input" id="EndDateFilter" type="text" autocomplete="off">
                                <input type="hidden" class="filter" name="EndDateStart" id="EndDateStartFilter" />
                                <input type="hidden" class="filter" name="EndDateEnd" id="EndDateEndFilter" />
                            </div>
                        </div>

                        <div class="row m--margin-bottom-10">
                            <div class="col-lg-12 margin-bottom-10">
                                <span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> Show Advanced Filters</span>
                                <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" style="display: none"><i class="fa fa-angle-up"></i> Hide Advanced Filters</span>
                            </div>

                            <div class="col-sm-12 col-lg-6 text-center text-md-left">
                            </div>

                            <div class="mr-auto-btn col-sm-12 col-xl-6 text-center text-md-right">
                                <button class="btn btn-primary btn-brand m-btn m-btn--icon" id="SearchButton">
                                    <span>
                                        <i class="la la-search"></i>
                                        <span>@L("Search")</span>
                                    </span>
                                </button>

                                <button class="btn btn-secondary m-btn m-btn--icon" id="ClearSearchButton">
                                    <span>
                                        <i class="la la-close"></i>
                                        <span>@L("Clear")</span>
                                    </span>
                                </button>

                            </div>
                        </div>
                    </div>
                </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center" id="TableParentDiv">
                    <table class="table table-striped table-bordered table-hover dt-responsive" id="ProjectsTable"></table>
            </div>
        </div>
    </div>
</div>
