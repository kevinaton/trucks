@using System.Threading.Tasks
@using DispatcherWeb.Web.Areas.App.Startup
@using DispatcherWeb.PreventiveMaintenanceSchedule.Dto
@using DispatcherWeb.Web.Areas.App.Models.PreventiveMaintenanceSchedule
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.ScheduledReports;
}
@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/ScheduledReports/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/ScheduledReports/Index.min.js" asp-append-version="true"></script>
    </environment>
    
}


<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>Scheduled Reports</span>
            </h3>
            <span class="m-section__sub">
                Manage your scheduled reports
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            <button id="AddScheduledReport" class="btn btn-primary"><i class="fa fa-plus"></i>Add Scheduled Report</button>
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="row align-items-center">
                <table id="ScheduledReportsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap"></table>
            </div>
        </div>
    </div>
</div>