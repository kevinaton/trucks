@using DispatcherWeb.Web.Areas.App.Startup
@using DispatcherWeb.Web.Areas.App.Views.Shared.Components.OfficeTruckStyles
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.Offices;
}
@section Styles {
    <link rel="stylesheet" href="~/lib/admin-lte/plugins/colorpicker/bootstrap-colorpicker.css" asp-append-version="true" />

    @await Component.InvokeAsync(typeof(OfficeTruckStylesViewComponent))
}
@section Scripts{
        <script src="~/lib/admin-lte/plugins/colorpicker/bootstrap-colorpicker.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/Offices/_CreateOrEditModal.js" asp-append-version="true"></script>
        <script src="~/view-resources/Areas/app/Views/Offices/Index.js" asp-append-version="true"></script>
}

<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-6 col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("Offices")</span>
            </h3>
            <span class="m-section__sub">
                @L("OfficesHeaderInfo")
            </span>
        </div>
        <div class="mr-auto-btn col-6 col-sm-12 col-md-6 text-right">
            @if (ViewBag.CanCreateOffice)
            {
                <button id="CreateNewOfficeButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L("AddNew")</button>
            }
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="row align-items-center">
                <table id="OfficesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@L("Name")</th>
                            <th>@L("TruckColor")</th>
                            <th>@L("Samples")</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>

                <div class="schedule-truck-tiles temp" id="truckTilesSample" style="max-width: 853px"></div>
            </div>
        </div>
    </div>
</div>