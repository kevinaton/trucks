@using System.Threading.Tasks
@using DispatcherWeb.Quotes
@using DispatcherWeb.Web.Areas.App.Models.Common.Modals
@using DispatcherWeb.Quotes.Dto
@model CreateQuoteFromOrderInput
@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Enter quote name"))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <input type="hidden" asp-for="OrderId" />
        <div class="form-group">
            <label class="control-label">You are about to create a quote from this order. If this is what you want, then enter the name of the quote below. If it is not, choose cancel below.</label>
        </div>
        <div class="form-group">
            <label class="control-label required-label" for="Date">Quote name</label>
            <input class="form-control" id="Date" asp-for="QuoteName" type="text" required maxlength="@Quote.MaxNameLength">
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
