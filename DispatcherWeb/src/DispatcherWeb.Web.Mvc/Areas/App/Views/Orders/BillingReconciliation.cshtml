@using System.Threading.Tasks
@using Abp.Extensions
@using DispatcherWeb.Features
@using DispatcherWeb.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.BillingReconciliation;
}

@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/Orders/BillingReconciliation.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/Orders/BillingReconciliation.min.js" asp-append-version="true"></script>
    </environment>

}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-7 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("BillingReconciliation")</span>
            </h3>
            <span class="m-section__sub">
            </span>
        </div>
        <div class="col-5 col-md-6 text-right">
            <button id="ExportBillingReconciliationButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <form class="m-form m-form--label-align-right">
                <div class="row">
                    <div class="form-group col-lg-3 col-md-4 col-sm-6">
                        <label class="control-label" for="DateFilter">@L("Date")</label>
                        <input class="form-control" id="DateFilter" type="text" autocomplete="off">
                        <input type="hidden" class="filter" name="StartDate" id="DateStartFilter" />
                        <input type="hidden" class="filter" name="EndDate" id="DateEndFilter" />
                    </div>
                    @if ((await FeatureChecker.GetValueAsync(AppFeatures.AllowMultiOfficeFeature)).To<bool>())
                    {
                        <div class="form-group col-lg-3 col-md-4 col-sm-6">
                            <label class="control-label">Office</label>
                            <select class="form-control filter" name="OfficeId" id="OfficeIdFilter" data-display-name="OfficeName"></select>
                        </div>
                    }
                    <div class="form-group col-lg-3 col-md-4 col-sm-6">
                        <label class="control-label" for="CustomerIdFilter">Customer</label>
                        <select class="form-control filter" name="CustomerId" id="CustomerIdFilter" data-display-name="CustomerName">
                            <option value="">Select a customer</option>
                        </select>
                    </div>
                    <div class="form-group m-checkbox-list col-lg-3 col-md-4 col-sm-6 checkbox-container ">
                        <label for="IsBilledFilter" class="m-checkbox">
                            <input id="IsBilledFilter" class="filter" type="checkbox" name="IsBilled" />
                            Is Billed
                            <span></span>
                        </label>
                    </div>
                </div>
                <div class="row m--margin-bottom-10 text-right justify-content-end">
                    <div class="col-lg-12 text-right">
                        <button type="submit" id="SearchButton" class="btn btn-primary">
                            <i class="fa fa-search"></i> Search
                        </button>
                        <button type="button" id="ClearSearchButton" class="btn btn-default">
                            <i class="fa fa-times"></i> Clear
                        </button>
                    </div>
                </div>

            </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="BillingReconciliationTable"></table>
            </div>
        </div>
    </div>
</div>

