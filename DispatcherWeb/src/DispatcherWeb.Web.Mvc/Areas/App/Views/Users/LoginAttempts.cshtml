@using DispatcherWeb.Web.Areas.App.Models.Users
@using Abp.Application.Services.Dto
@model UserLoginAttemptsViewModel

@section Scripts {
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/Users/LoginAttempts.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/Users/LoginAttempts.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-6 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("LoginAttempts")</span>
            </h3>
            <span class="m-section__sub">
                @L("LoginAttemptsHeaderInfo")
            </span>
        </div>
    </div>
</div>

<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <form class="m-form m-form--fit m--margin-bottom-20">
                <div class="row m--margin-bottom-20">
                    <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
                        <label class="control-label" for="LoginAttemptsFilter">@L("Filter")</label>
                        <input class="form-control m-input filter" name="Filter" id="LoginAttemptsFilter" type="text" placeholder="@L("SearchWithThreeDot")">
                    </div>
                    <div class="col-lg-3 m--margin-bottom-10-tablet-and-mobile">
                        <label class="control-label" for="DateRangeFilter">@L("DateRange")</label>
                        <input class="form-control m-input" id="DateRangeFilter" type="text" autocomplete="off">
                        <input type="hidden" class="filter" name="StartDate" id="DateRangeStartFilter" />
                        <input type="hidden" class="filter" name="EndDate" id="DateRangeEndFilter" />
                    </div>
                    <div class="form-group col-lg-3 m--margin-bottom-10-tablet-and-mobile">
                        <label class="control-label">@L("Result")</label>
                        <select class="form-control m-input filter" name="Result" id="LoginResultFilter" asp-items="Model.LoginAttemptResults.Select(e => e.ToSelectListItem())">
                            <option value="">Select a login result</option>
                        </select>
                    </div>
                </div>
                <div class="row m--margin-bottom-10">
                    <div class="mr-auto-btn col-sm-12 col-xl-12 text-center text-md-right">
                        <button class="btn btn-primary btn-brand m-btn m-btn--icon" id="SearchButton">
                            <span>
                                <i class="la la-search"></i>
                                <span>@L("Search")</span>
                            </span>
                        </button>
                        <button class="btn btn-secondary m-btn m-btn--icon" id="ClearSearchButton">
                            <span>
                                <i class="la la-close"></i>
                                <span>@L("Clear")</span>
                            </span>
                        </button>
                    </div>
                </div>
            </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center" id="TableParentDiv">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="LoginAttemptsTable"></table>
            </div>
        </div>
    </div>
</div>
