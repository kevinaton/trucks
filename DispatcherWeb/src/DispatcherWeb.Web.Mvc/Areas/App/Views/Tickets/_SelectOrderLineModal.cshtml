@using System.Threading.Tasks
@using DispatcherWeb.Web.Areas.App.Models.Common.Modals
@using DispatcherWeb.Web.Areas.App.Models.Tickets
@model SelectOrderLineViewModel
@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Select Order Line"))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">

        <div class="form-group">
            <label class="required-label" asp-for="OrderLineId">@L("OrderLine")</label>
            <select class="form-control" asp-for="OrderLineId" asp-items="@Model.OrderLineSelectList" required></select>
        </div>
    </form>

</div>

<div class="modal-footer">
    @*<button type="button" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>*@
    <button type="button" class="btn btn-primary save-button"><i class="fa fa-save"></i> <span>@L("Select")</span></button>
</div>