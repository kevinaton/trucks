@using DispatcherWeb.Infrastructure.Extensions
@using DispatcherWeb.Web.Areas.App.Models.DriverApplication
@model DriverApplicationClockViewModel
@{
    Layout = "_Layout";
}
@section Scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Areas/App/Views/DriverApplication/_LayoutWithClock.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/App/Views/DriverApplication/_LayoutWithClock.min.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", false)
}

<div class="row">
    <div class="col-6 col-md-4 col-lg-3">
        <div class="row">
            <div class="col-12 margin-bottom-10"><button class="btn btn-primary col-12" id="ClockOutButton">@(Model.ClockIsStarted ? "Clock Out" : "Clock In")</button></div>
            @*<div class="col-12 margin-bottom-10"><button class="btn btn-primary col-12" id="StartBreakButton">@(Model.ClockIsStarted ? "Start Break" : "End Break")</button></div>*@
        </div>
    </div>
    <div class="col-6 col-md-4 col-lg-3"><h1 id="ElapsedTime" data-value="@Model.ElapsedTime.ToString("g")" data-clockisstarted="@Model.ClockIsStarted.ToLowerCaseString()">@Model.ElapsedTime.ToString("HH"):@Model.ElapsedTime.ToString("mm")</h1></div>
</div>
@RenderBody()
