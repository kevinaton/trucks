@using System.Threading.Tasks
@using DispatcherWeb.Dispatching.Dto
@using DispatcherWeb.Web.Areas.App.Models.Common.Modals
@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Add Ticket Photo"))
@model AddTicketPhotoInput

<style>
    
</style>

<div class="modal-body">
    <form role="form" novalidate class="form-validation" method="POST" action="@Url.Action("AddTicketPhoto", "DriverApplication")">
        <input type="hidden" asp-for="Guid" />
        <div class="form-group fileUpload">
            <div class="btn btn-primary browse_btn">
                <span>Pick a Photo</span>
                <input type="file" accept="image/*" capture class="upload" id="TicketPhoto" name="TicketPhoto">
            </div>
        </div>
        <input type="submit" style="display: none" />
    </form>
</div>

@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
