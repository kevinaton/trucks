@using Abp.Configuration
@using Abp.Extensions
@using DispatcherWeb.Configuration
@using DispatcherWeb.Authorization
@using DispatcherWeb.Features
@using DispatcherWeb.Web.Areas.App.Startup
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.VehicleUsages;
}
@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/VehicleUsages/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/VehicleUsages/Index.min.js" asp-append-version="true"></script>
    </environment>

}

<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("VehicleUsagesHeader")</span>
            </h3>
            <span class="m-section__sub">
                @L("VehicleUsagesHeaderInfo")
            </span>
        </div>
        <div class="col-6 text-right">
            @if (IsGranted(AppPermissions.Pages_Imports_VehicleUsage))
            {
                <button id="ImportVehicleUsageButton" class="btn btn-primary"><i class="fas fa-upload"></i> @L("Import")</button>
            }

            @if (IsGranted(AppPermissions.Pages_VehicleUsages_Edit))
            {
                <button id="CreateNewVehicleUsageButton" class="btn btn-primary"><i class="fa fa-plus"></i> @L("AddNew")</button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <form class="m-form m-form--label-align-right">
                <div class="row">
                    @if ((await FeatureChecker.GetValueAsync(AppFeatures.AllowMultiOfficeFeature)).To<bool>())
                    {
                        <div class="form-group col-lg-3 col-md-4 col-sm-6">
                            <label class="control-label">@L("Office")</label>
                            <select class="form-control filter" name="OfficeId" id="OfficeIdFilter" data-display-name="OfficeName">
                                <option value="">Select a office</option>
                            </select>
                        </div>
                    }
                    <div class="form-group col-lg-3 col-md-4 col-sm-6">
                        <label class="control-label" for="TruckFilter">Truck</label>
                        <select class="form-control filter" name="TruckId" id="TruckFilter" data-display-name="TruckCode">
                            <option value="">Select a truck</option>
                        </select>
                    </div>
                    <div class="form-group col-lg-3 col-md-4 col-sm-6">
                        <label class="control-label" for="ReadingDateTime">Reading Date Time</label>
                        <input class="form-control filter" name="ReadingDateTime" id="ReadingDateTimeFilter" type="text" autocomplete="off">
                    </div>
                    <div class="form-group col-lg-3 col-md-4 col-sm-6">
                        <label>Reading Type</label>
                        <select class="form-control filter" name="ReadingType" id="ReadingTypeFilter" asp-items="Html.GetEnumSelectList<ReadingType>()">
                            <option value="">Select reading type</option>
                        </select>
                    </div>
                </div>
                <div class="row m--margin-bottom-10">
                    <div class="col-lg-12 text-right margin-top-20">
                        <button type="submit" id="SearchButton" class="btn btn-primary">
                            <i class="fa fa-search"></i> @L("Search")
                        </button>
                        <button type="button" id="ClearSearchButton" class="btn btn-default">
                            <i class="fa fa-times"></i> @L("Clear")
                        </button>
                    </div>
                </div>
            </form>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div class="row align-items-center">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="VehicleUsagesTable"></table>
            </div>
        </div>
    </div>
</div>