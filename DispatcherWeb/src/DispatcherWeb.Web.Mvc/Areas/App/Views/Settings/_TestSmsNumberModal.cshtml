@using System.Threading.Tasks
@using DispatcherWeb.Web.Areas.App.Models.Common.Modals
@using DispatcherWeb.DriverAssignments.Dto
@model DispatcherWeb.Web.Areas.App.Models.Settings.TestSmsNumberModalViewModel
@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("SMS Number to Send Test To"))

<div class="modal-body">
    <form role="form" novalidate class="form-validation">
        <input type="hidden" asp-for="TestPurpose" />
        <div class="form-group">
            <label class="required-label">Country Code</label>
            <input class="form-control" asp-for="CountryCode" required/>
        </div>
        <div class="form-group">
            <label class="required-label">SMS Number</label>
            <input class="form-control" asp-for="PhoneNumber" required/>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-primary save-button"><i class="fa fa-save"></i> <span>Send</span></button>
</div>
