@using System.Threading.Tasks
@using DispatcherWeb.Web.Areas.App.Models.QuoteHistory
@using DispatcherWeb.Web.Areas.App.Startup
@model QuoteHistoryIndexViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Tenant.QuoteHistory;
}

@section Scripts{
    <environment names="Development">
        <script src="~/view-resources/Areas/app/Views/QuoteHistory/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Areas/app/Views/QuoteHistory/Index.min.js" asp-append-version="true"></script>
    </environment>
    
}
<div class="m-subheader ">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("QuoteHistory")</span>
            </h3>
            <span class="m-section__sub">
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">

        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="box-container">
                <form class="m-form m-form--fit m--margin-bottom-20">
                    <div class="row m--margin-bottom-20">
                        <div class="form-group col-lg-4 col-md-4 col-sm-6">
                            <label class="control-label" for="DateFilter">@L("Date")</label>
                            <input class="form-control" id="DateFilter" type="text" autocomplete="off">
                            <input type="hidden" class="filter" name="StartDate" id="StartDateFilter" />
                            <input type="hidden" class="filter" name="EndDate" id="EndDateFilter" />
                        </div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-6">
                            <label class="control-label" for="CustomerIdFilter">@L("Customers")</label>
                            <select class="form-control filter" name="CustomerId" id="CustomerIdFilter">
                                <option value="">Select a customer</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-4 col-md-4 col-sm-6">
                            <label class="control-label" for="QuoteIdFilter">@L("Quotes")</label>
                            <select class="form-control filter" name="QuoteId" id="QuoteIdFilter">
                                <option value=""
                                        data-placeholder-default="Select a quote"
                                        data-placeholder-no-items="No quotes defined for the selected customer"
                                        data-placeholder-no-parent="Select a customer first">
                                    Select a quote
                                </option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <button class="btn btn-primary btn-brand m-btn m-btn--icon" id="SearchButton">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>@L("Search")</span>
                                </span>
                            </button>
                            <button class="btn btn-secondary m-btn m-btn--icon" id="ClearSearchButton">
                                <span>
                                    <i class="la la-close"></i>
                                    <span>@L("Clear")</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="m-separator m-separator--md m-separator--dashed"></div>
            <div>
                <input type="hidden" asp-for="Id" id="QuoteHistoryRecordId" />
                <table class="table table-striped table-bordered table-hover dt-responsive" id="QuoteHistoryTable"></table>
            </div>

        </div>
    </div>
</div>
