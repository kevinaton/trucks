@using DispatcherWeb.Web.Areas.App.Models.Common.Modals
@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Upload signature picture"))

<div class="modal-body">
    <form id="UploadSignaturePictureModalForm" method="POST" action="@(ApplicationPath + "Profile/UploadSignaturePicture")">
        <div class="form-group row">
            <input class="col-12" type="file" name="SignaturePicture"/>
            <span class="col-12 help-block m-b-none">@L("ProfileSignature_Change_Info", AppConsts.MaxSignaturePictureBytesUserFriendlyValue)</span>
        </div>
    </form>
    <img class="col-12" id="SignaturePictureResize" src="" style="max-width: 100%;"/>
</div>

@await Html.PartialAsync("~/Areas/app/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
