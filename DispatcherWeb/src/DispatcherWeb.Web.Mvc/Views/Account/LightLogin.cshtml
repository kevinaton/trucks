@using System.Threading.Tasks
@using Abp.Web.Security.AntiForgery
@using DispatcherWeb.Web.Models.Account
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@model LightLoginViewModel
@{
    Layout = null;
    AbpAntiForgeryManager.SetCookie(Context);
}

<h3 class="form-title">Log in</h3>

<div asp-validation-summary="All"></div>

<form asp-action="LightLogin" class="login-form" method="post">
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
    <input type="hidden" name="returnUrlHash" />
    <input type="hidden" name="ss" value="@ViewBag.SingleSignIn" />
    <div class="form-group">
        <input class="form-control form-control-solid placeholder-no-fix input-ltr" type="text" autocomplete="off" placeholder="@L("TenancyName")" asp-for="TenancyName" required />
    </div>
    <div class="form-group">
        <input class="form-control form-control-solid placeholder-no-fix input-ltr" type="text" autocomplete="off" placeholder="@L("UserNameOrEmail")" asp-for="UsernameOrEmailAddress" required />
    </div>
    <div class="form-group">
        <input class="form-control form-control-solid placeholder-no-fix input-ltr" type="password" autocomplete="off" placeholder="@L("Password")" name="password" required />
    </div>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">@L("LogIn")</button>
        <div class="rememberme">
            <label class="m-checkbox m-checkbox--primary">
                <input type="checkbox" name="rememberMe" value="true">
                @L("RememberMe")
                <span></span>
            </label>
        </div>
        @*<a href="@Url.Action("ForgotPassword", "Account")" id="forget-password" class="forget-password">@L("ForgotPassword")</a>*@
    </div>
</form>

