@model DispatcherWeb.Web.Models.Account.VerifySecurityCodeViewModel
@section Scripts
{
    <script abp-src="/view-resources/Views/Account/VerifySecurityCode.js" asp-append-version="true"></script>
}

<form class="verify-security-code-form" asp-action="VerifySecurityCode" method="post">

    <h3>@L("VerifySecurityCode")</h3>
    <p class="login-page-description">@L("VerifySecurityCode_Information")</p>

    @Html.Hidden("returnUrl", Model.ReturnUrl)
    @Html.Hidden("provider", Model.Provider)
    @Html.Hidden("rememberMe", Model.RememberMe)

    <div class="form-group">
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", required = "required", placeholder = L("Code") })
    </div>

    @if (Model.IsRememberBrowserEnabled)
    {
        <div class="form-group margin-top-20">
            <label class="m-checkbox">
                @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "form-control" }) @L("RememberThisBrowser")
                <span></span>
            </label>
        </div>
    }

    <div class="form-actions">
        <input type="submit" class="btn btn-primary pull-right" value="@L("Submit")" />
    </div>

</form>