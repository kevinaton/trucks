@using Abp.Json
@using DispatcherWeb.MultiTenancy
@using DispatcherWeb.Web.Models.TenantRegistration
@addTagHelper *, Owl.reCAPTCHA
@{
    ViewBag.DisableTenantChange = true;
}
@model TenantRegisterViewModel
@section Scripts
    {
    <script>
        window.passwordComplexitySetting = @Html.Raw(Model.PasswordComplexitySetting.ToJsonString(indented: true));
    </script>
    <environment names="Development">
        <script src="~/view-resources/Views/TenantRegistration/Register.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/TenantRegistration/Register.min.js" asp-append-version="true"></script>
    </environment>

    <recaptcha-script />
}
<div class="m-login m-login__signin">
    <div class="m-login__head">
        <h3 class="m-login__title">
            @L("TenantSignUp")
            <small>
                @if (Model.EditionId.HasValue)
                {
                    <div class="hint text-right">@Model.Edition.DisplayName @L("edition")</div>
                }
            </small>
        </h3>
    </div>
    <form class="m-login__form m-form register-form" asp-action="Register" method="post" id="formTenantRegister">
        <input type="hidden" Name="EditionId" value="@Model.EditionId" />
        @if (Model.EditionId.HasValue)
        {
            <input type="hidden" Name="SubscriptionStartType" value="@Model.SubscriptionStartType" />
                <input type="hidden" name="EditionPaymentType" value="@Model.EditionPaymentType" />
                <input type="hidden" name="Gateway" value="@Model.Gateway" />
                <input type="hidden" name="PaymentId" value="@Model.PaymentId" />
        }

        @if (@ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="fa fa-exclamation-triangle"></i> @ViewBag.ErrorMessage
            </div>
        }

        <h4 class="m-login__title">
            @L("TenantInformation")
        </h4>
        <div class="row">
            <div class="col-12 form-group">
                <input class="form-control form-control m-input" type="text" placeholder="@L("CompanyNamePlaceholder")" name="CompanyName" id="CompanyName" required maxlength="@Tenant.MaxTenancyNameLength" />
            </div>
        </div>
        <h4 class="m-login__title">
            @L("AccountSettings")
        </h4>
        <div class="row full-name-row">
            <div class="col-sm-6 col-12 form-group col-first">
                <input class="form-control form-control m-input" type="text" placeholder="@L("FirstName")" name="AdminFirstName" id="AdminFirstName" required maxlength="@DispatcherWeb.Authorization.Users.User.MaxNameLength" />
            </div>
            <div class="col-sm-6 col-12 form-group col-last">
                <input class="form-control form-control m-input" type="text" placeholder="@L("LastName")" name="AdminLastName" id="AdminLastName" required maxlength="@DispatcherWeb.Authorization.Users.User.MaxSurnameLength" />
            </div>
        </div>
        <div class="form-group">
            <input class="form-control form-control m-input" type="email" placeholder="@L("EmailAddress")" name="AdminEmailAddress" required maxlength="@DispatcherWeb.Authorization.Users.User.MaxEmailAddressLength" />
        </div>
            <div class="form-group">
                <input class="form-control form-control m-input" type="password" autocomplete="off" id="AdminPassword" placeholder="@L("Password")" name="AdminPassword" required maxlength="@DispatcherWeb.Authorization.Users.User.MaxPlainPasswordLength" />
                <div class="small-hint">Minimum of @Model.PasswordComplexitySetting.RequiredLength characters</div>
            </div>
            <div class="form-group">
                <input class="form-control form-control m-input" type="password" autocomplete="off" placeholder="@L("PasswordRepeat")" name="AdminPasswordRepeat" required maxlength="@DispatcherWeb.Authorization.Users.User.MaxPlainPasswordLength" />
            </div>
        @if (ViewBag.UseCaptcha)
        {
            <h4 class="m-login__title m--margin-top-20">
                @L("Captha_Hint")
            </h4>
            <div class="form-group margin-bottom-20">
                <recaptcha-script-v2 />

                <recaptcha-div-v2 />
            </div>
        }
        <div class="m-portlet__body">
            <div class="m-login__form-action mt-6 d-flex justify-content-between">
                <a asp-action="Login" asp-controller="Account" id="register-back-btn" class="btn btn-default">@L("Back")</a>
                <button type="submit" id="register-submit-btn" class="btn btn-primary m-btn m-btn--custom m-btn--air ml-4">@L("Submit")</button>
            </div>
        </div>
    </form>
</div>