    AbpAntiForgeryManager.SetCookie(Context);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>DispatcherWeb Installation</title>
    <link rel="shortcut icon" href="~/favicon.ico" />
    @await Html.PartialAsync("_CommonInlineStyles")
